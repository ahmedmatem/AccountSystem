@model IEnumerable<AccountSystem.Web.Models.CustomerViewModel>

@{
    ViewBag.Title = "Show deleted customers";
}

<div>
    <a href="@Url.Content("~/Customers/Index")" id="newCustomer" class="btn btn-primary"><i class="fa fa-list"></i> Show list of all active customers</a>
</div>

<div>
    <h3>List of all deleted customers</h3>
    @foreach (var customer in Model)
    {
        <div class="row row-list">
            <div class="col-md-3 col-sm-6 col-xs-6">
                <span id="@customer.Id" class="clickable-div">@customer.Name</span>
            </div>
            <div class="col-md-9 col-sm-6 col-xs-6">
                <a href="@Url.Content("~/Customers/Restore/" + customer.Id)" title="Restore"><i class="fa fa-refresh"></i></a>
            </div>
        </div>
    }
</div>
