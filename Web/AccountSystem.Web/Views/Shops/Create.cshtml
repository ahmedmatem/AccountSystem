@model AccountSystem.Web.Models.ShopViewModel

@{
    ViewBag.Title = "Create a shop";
}

<div>
    <a href="@Url.Content("~/Shops/Index")" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Back</a>
</div>

<div><h3>Create new shop</h3></div>

@using (Html.BeginForm("Create", "Shops", FormMethod.Post, new { @class = "form-horizontal form-custome" }))
{
    @Html.AntiForgeryToken()

    <div class="control-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    
    <br />
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Content("~/Shops/Index")" class="btn btn-danger">Cancel</a>
        </div>
    </div>
}